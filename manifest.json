{
  "description": "Opens salvage inventory sites in new tabs, searching for the copied VIN",
  "manifest_version": 2,
  "name": "Salvage Search",
  "version": "2.0",
  "homepage_url": "https://github.com/benetherington/salvage-search",
  "icons": {
    "24": "icons/SS-24.jpg",
    "48": "icons/SS-48.jpg",
    "96": "icons/SS-96.jpg"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardRead",
    "activeTab",
    "tabs",
    "*://www.copart.com/lot/*",
    "*://www.iaai.com/*",
    "https://anvis.iaai.com/deepzoom*",
    "webRequest", "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "search.js",
      "download-background.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://www.copart.com/lot/*"],
      "js": ["download-copart.js"]
    },
    {
      "matches": ["*://www.iaai.com/vehicledetails/*"],
      "js": ["download-iaai.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "24": "icons/SS-24.jpg",
      "48": "icons/SS-48.jpg",
      "96": "icons/SS-96.jpg"
    },
    "default_popup": "popup/actions.html"
  },
  "options_ui": {
    "page": "options.html"
  }
}
