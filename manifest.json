{
  "description": "Opens salvage inventory sites in new tabs, searching for the copied VIN",
  "manifest_version": 2,
  "name": "Salvage Search",
  "version": "2.0",
  "homepage_url": "https://github.com/benetherington/salvage-search",
  "icons": {
    "48": "icons/icon.svg"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "clipboardRead",
    "activeTab",
    "tabs",
    "*://www.copart.com/lot/*",
    "*://www.iaai.com/*",
    "https://anvis.iaai.com/deepzoom*",
    "https://knicknic.github.io/wasm-imagemagick/*",
    "webRequest", "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "search.js",
      "canvastobmp.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "24": "icons/SS-24.bmp",
      "48": "icons/SS-48.bmp",
      "96": "icons/SS-96.bmp"
    }
  },
  "page_action": {
    "default_icon": {
      "24": "icons/SS-24.bmp",
      "48": "icons/SS-48.bmp",
      "96": "icons/SS-96.bmp"
    },
    "default_title": "Salvage Search",
    "show_matches": [
      "https://www.copart.com/lot/*",
      "https://www.iaai.com/vehicledetails/*"
    ]
  },
  "options_ui": {
    "page": "options.html"
  },
  "browser_specific_settings":
    {"gecko":
      {"update_url": "https://benetherington.com/salvage-search/updates.json"}
    }
}
